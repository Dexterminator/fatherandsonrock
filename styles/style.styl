@import 'nib'

color-background = #282828
color-black-transparent = rgba(0, 0, 0, 0.5)

body
  font-family sans-serif
  font-size 1.3rem
  background-color color-background
  color white
  min-height 100vh
  padding 0
  margin 0
  background url(../images/background.jpg)
  background-size cover

header
  display flex
  height 13rem
  justify-content center
  align-items center
  font-size 2.5rem
  background-color color-black-transparent

  a
    text-decoration none
    align-self center

  .active
    text-decoration underline

  .header-content
    display flex
    justify-content space-around
    text-align center
    width 90%

  .band-logo
    height 10rem
    align-self center

main
  width 100%
  margin-left auto
  margin-right auto

a
  color white

.background-image
  width 100%
  position absolute
  margin-left auto
  margin-right auto
  top -4rem
  left 0
  right 0
  z-index -1

.band-description
  width 50%
  margin-left auto
  margin-right auto
  margin-top 3rem

.intro-text
  font-size 1.2rem
  margin-bottom 1rem

.contact
  margin-top 3rem
