mixin main-header(active)

  mixin item(title, url)
    a(href=url, class=active == title && 'active')= title

  .header-content
    +item("About", "/")
    +item("Albums", "/albums")
    +item("Black Circle", "/black-circle")
    a(href="/")
      img.band-logo(src="images/logo.png")
    +item("Video", "/video")
    +item("Press", "/press")
    a(href="https://super8.merchants.se/en/super-8/fonogram/" target="_blank") Shop
